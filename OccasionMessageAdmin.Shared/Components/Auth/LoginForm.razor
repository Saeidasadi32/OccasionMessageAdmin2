@page "/auth/login"
@using System.ComponentModel.DataAnnotations
@using SharedComponents.Components.Forms

<div class="auth-form">
    <h3>ورود</h3>

    <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
        <DataAnnotationsValidator />

        <InputEmailBox @bind-Value="loginModel.Email" Label="پست الکترونیک" Placeholder="آدرس ایمیل خود را وارد کنید" FullWidth="true" Required />
        <InputPasswordBox @bind-Value="loginModel.Password" Label="رمز عبور" Placeholder="رمز خود را وارد کنید" FullWidth="true" Required
                              StyleMode="Line" SecondTitle="رمز عبور را فراموش کردید؟"/>

        <button type="submit">ورود</button>
    </EditForm>
</div>

@code {
    private LoginModel loginModel = new();

    private void HandleLogin()
    {
        // اینجا میشه API call زد
        Console.WriteLine($"Email: {loginModel.Email}, Password: {loginModel.Password}");
    }

    public class LoginModel
    {
        [Required(ErrorMessage = "ایمیل را وارد کنید")]
        [EmailAddress(ErrorMessage = "ایمیل معتبر نیست")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "رمز عبور را وارد کنید")]
        public string Password { get; set; } = string.Empty;
    }
}
